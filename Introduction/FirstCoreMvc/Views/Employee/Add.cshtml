@model FirstCoreMvc.Controllers.Model.EmployeeAddViewModel

    @{
        Layout = null;
    }

    <!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Add</title>
    </head>
    <body>
        <form asp-controller="Employee" asp-action="Add">
            <label asp-for="Employee.Id"></label> <input asp-for="@Model.Employee.Id" />
            <label asp-for="Employee.FirstName"></label><input asp-for="@Model.Employee.FirstName" />
            <label asp-for="Employee.LastName"></label><input asp-for="@Model.Employee.LastName" value="Deneme" />
            <label asp-for="Employee.CityId"></label><select asp-for="@Model.Employee.CityId" asp-items="Model.Cities"></select><br />
            <button type="submit">Add</button>
        </form>
        <employee-list></employee-list>
    </body>
</html>
